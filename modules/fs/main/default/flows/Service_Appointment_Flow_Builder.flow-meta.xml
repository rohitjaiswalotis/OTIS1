            </connector>
            <label>SA completed within time</label>
        </rules>
        <rules>
            <name>SA_Not_Completed_WithinTime</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.CompletedWithinTime__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
