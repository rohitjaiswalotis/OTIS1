<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Accepted_SA_cannot_be_Rejected</fullName>
    <active>true</active>
    <errorConditionFormula>AND(OR(IF(ISPICKVAL(Status,&quot;Accepted&quot;),true,false),IF(ISPICKVAL(Status,&quot;In Progress&quot;),true,false)), ISCHANGED( Accept_Reject__c ) )</errorConditionFormula>
    <errorMessage>You cannot &apos;Reject&apos; Service appointment once it is accepted</errorMessage>
</ValidationRule>
